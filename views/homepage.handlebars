{{#each blogs as |blog| }}
<div>
  <div>
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div>
    <p>
      {{blog.description}}
    </p>
  </div>
  <div>
    {{#if comments.length}}
    {{#each comments as |comment| }}
    <div>
      <h2><a href='/blog/{{blog.id}}'>{{name}}</a></h2>
      <p>{{text}}</p>
    </div>
    {{/each}}
    {{/if}}
  </div>
</div>
{{/each}}