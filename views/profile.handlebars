<div>
  <h2>Welcome, {{name}}!</h2>
</div>

<div>
  <div>
    <h3>Create a New Blog Post:</h3>

    <form>
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <textarea class="form-control" id="blog-name" rows="3"></textarea>
      </div>
      <div>
        <label for="blog-desc">Blog description:</label>
        <textarea class="form-control" id="blog-desc" rows="3"></textarea>
      </div>
      <div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div>
    <h3>Your blogs:</h3>

    {{#each blogs as |blog|}}
    <div>
      <div>
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div>
        <button type="button" class="btn btn-secondary" id="edit-blog" data-id="{{blog.id}}">EDIT</button>
      </div>
      <div>
        <button type="button" class="btn btn-secondary" id="delete-blog" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>

    {{/each}}
    <h2>you do not currently have any posts</h2>
    {{/if}}
  </div>

  <script src="./js/profile.js"></script>